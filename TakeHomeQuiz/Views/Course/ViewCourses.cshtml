@model IEnumerable<TakeHomeQuiz.Models.CourseModel>

@{
    ViewBag.Title = "ViewCourses";
}

<h2>ViewCourses</h2>

<p>
    @Html.ActionLink("Create New", "AddCourse")
</p>
@if (Model.Count() > 0)
{
    <table class="table">

        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Units)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>

                    @Html.ActionLink("Delete", "DeleteCourse", new { id = item.CourseID })
                </td>
            </tr>
        }


    </table>
}
else
{
    <tr>
        <td colspan="10">
            <h2 class="text-center">
                No records found!
            </h2>
        </td>
    </tr>
}

